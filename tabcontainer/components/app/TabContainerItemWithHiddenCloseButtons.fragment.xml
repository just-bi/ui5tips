<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:m="sap.m"
  xmlns:core="sap.ui.core"
>
  <m:TabContainer 
    class="noCloseButtons"
    itemClose="onTabContainerItemClose"
  >
    <m:items>
      <m:TabContainerItem
        id="item3"
        name="Default"
      >      
        <m:content>
          <m:Text text="Close button hidden by default"/>
        </m:content>
      </m:TabContainerItem>
      <m:TabContainerItem
        id="item4"
        name="Show Close Button"
      >
        <!-- 
        
          Use custom data to hide the close button for any individual TabContainerItem
        
        -->
        <m:customData>
          <core:CustomData key="noCloseButton" value="false" writeToDom="true" />
          <core:CustomData key="myKey" value="myValue" writeToDom="true" />
        </m:customData>
        <m:content>
          <m:Text text="Close button shown using custom data"/>
        </m:content>
      </m:TabContainerItem>
    </m:items>
  </m:TabContainer>            
</core:FragmentDefinition>